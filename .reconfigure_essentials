#!/bin/bash

# needs user with sudo package
# supposed .home.git created:
#  git clone --bare https://github.com/antonylao/home-config $HOME/.home.git
sudo apt install \
  git mr \
  rsync wget curl gdebi make cmake glibc-source fuse xinit \
  fish feh i3 firefox-esr alacritty

#explanation of packages
#mr: to run git commands on multiple repos
#rsync: sync different folders
#glibc-source: needed for neovim 0.11 as of 2025-05-16
#fuse: to run appimage
#feh: for images
#??: for videos

# OPTIONALS: #
#wine #run exe
#x11-server-utils #for using xmodmap to remap keys

# CONFIGURE HOME
function githm {
  /usr/bin/git --git-dir=$HOME/.home.git/ --work-tree=$HOME $@
}
#backup files that will be replaced by home-config
mkdir -p .config-backup &&
  githm checkout 2>&1 | egrep "\s+\." | awk {'print $1'} |
  xargs -I{} mv {} .config-backup/{}

githm checkout

# NVIM 0.11
mkdir -p $HOME/.local/bin/nvim
wget -P $HOME/.local/bin/nvim https://github.com/neovim/neovim/releases/download/v0.11.1/nvim-linux-x86_64.appimage
cd $HOME/.local/bin
chmod u+x nvim-linux-x86_64.appimage && ./nvim-linux-x86_64.appimage
cd $HOME
